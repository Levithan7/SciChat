@page
@model SciChatProject.Pages.ConversationModel
@{
	string convid = Request.Query["conversationid"];
	string buff = ":";

}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<meta http-equiv="refresh" content="1">

<p>
	<body>
		<!--Example on how data could be displayed-->
		<form id="message" method="post">
			<input type="submit" name="sendmessage" value="click" />
			<input type="text" name="contentmessage" placeholder="Message" /><br/>
			@foreach (var message in Models.Conversation.GetConversationByID(Int32.Parse(convid)).GetMessages())
			{
				<br /> @message.GetUser().UserName
				@buff
				<br /> @message.Content
			}
	</form>
	</body>
</p>